@using FLO_Proyect.ViewModel
@model ProductVM

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0 font-size-18">Jobs Grid</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Jobs</a></li>
                            <li class="breadcrumb-item active">Jobs Grid</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->


        <div class="row">
            <div class="col-lg-12">
                <div class="card job-filter">
                    <div class="card-body p-3">
                        <form class="row" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="col-md-3">
                                <label>
                                    Title
                                </label>
                                <input asp-for="@Model.Product.Title" type="text" class="form-control" />
                                <span asp-validation-for="@Model.Product.Title" class="text-danger"></span>
                            </div>

                            <div class="col-md-3">
                                <label>
                                    Description
                                </label>
                                <input asp-for="@Model.Product.Description" type="text" class="form-control" />
                                <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
                            </div>


                            <div class="col-md-3">
                                <label>
                                    Price
                                </label>
                                <input asp-for="@Model.Product.Price" type="text" class="form-control" />
                                <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
                            </div>


                            <div class="col-md-3">
                                <label>
                                    Esas sekil
                                </label>
                                <input asp-for="@Model.Product.ImgUrlBaseFile" type="file" class="form-control" />
                                <span asp-validation-for="@Model.Product.ImgUrlBaseFile" class="text-danger"></span>
                            </div>


                            <div class="col-md-3">
                                <label>
                                    Elave sekiller
                                </label>
                                <input asp-for="@Model.Product.ImagesFile" type="file" class="form-control" multiple />
                            </div>

                            <div class="col-md-3">
                                <label>
                                    Category
                                </label>
                                <select class="form-select" asp-for="@Model.Product.CategoryId">
                                    @foreach (var item in ViewBag.Category)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }

                                </select>
                            </div>

                            <div class="col-md-3">
                                <label>
                                    Colors
                                </label>
                                <select class="form-select" asp-for="@Model.ColorIds" multiple>
                                    @foreach (var item in ViewBag.Colors)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }

                                </select>
                            </div>


                            <div class="col-md-3">
                                <label>
                                    Size
                                </label>
                                <select class="form-select" asp-for="@Model.SizeIds" multiple>
                                    @foreach (var item in ViewBag.Size)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }

                                </select>
                            </div>

                            <div class="col-md-3">
                                <button type="submit" class="btn btn-danger mt-3">Add database</button>
                            </div>

                        </form>




                    </div>
                </div>
            </div>

        </div>


    </div>
</div><!-- End Page-content -->